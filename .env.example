# Agentic Strategy 2: Environment Configuration
# Copy this file to .env and customize as needed

# ========================================
# CORE AI CONFIGURATION
# ========================================

# Enable AI features (true/false)
ADKRUX_USE_AI=true

# Ollama LLM Configuration
ADKRUX_OLLAMA_MODEL=gemma3:4b
ADKRUX_OLLAMA_URL=http://localhost:11434

# Alternative models (uncomment to use):
# ADKRUX_OLLAMA_MODEL=deepseek-v3.1:671b-cloud
# ADKRUX_OLLAMA_MODEL=gpt-oss:20b-cloud
# ADKRUX_OLLAMA_MODEL=llama3.1:8b

# ========================================
# VECTOR SEARCH CONFIGURATION
# ========================================

# SentenceTransformers embedding model
ADKRUX_EMBED_MODEL=all-MiniLM-L6-v2

# Vector database settings
ADKRUX_VECTOR_DEBUG=true
ADKRUX_AI_VECTOR_ROUNDS=1
ADKRUX_VECTOR_LIMIT_PER_QUERY=25
ADKRUX_VECTOR_MAX_CANDIDATES=60

# ========================================
# OPTIMIZATION SETTINGS
# ========================================

# Target title length
ADKRUX_TARGET_LENGTH=190

# Maximum title length
ADKRUX_MAX_LENGTH=200

# Enable detailed logging
ADKRUX_DEBUG=false

# ========================================
# PERFORMANCE TUNING
# ========================================

# For faster optimization (lower quality):
# ADKRUX_AI_VECTOR_ROUNDS=0
# ADKRUX_VECTOR_DEBUG=false
# ADKRUX_VECTOR_LIMIT_PER_QUERY=15

# For better quality (slower):
# ADKRUX_AI_VECTOR_ROUNDS=2
# ADKRUX_VECTOR_MAX_CANDIDATES=100
# ADKRUX_VECTOR_LIMIT_PER_QUERY=35

# ========================================
# DATABASE PATHS
# ========================================

# Keyword database index path
ADKRUX_INDEX_PATH=st_keywords_index/keywords_index.npz

# Default keyword data files
ADKRUX_KEYWORDS_PATH=data (12).xlsx

